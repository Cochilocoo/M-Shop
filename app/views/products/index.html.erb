<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Products</h2>
    </div>
    
    <% @products.each do |category, products| %>
    <div class="col-sm-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><%= category.name %></h3>
            </div>
            <div class="panel-body">
                <% products.each do |product| %>
                <div class="row">
                    <div class="col-sm-6">
                        <ul>
                        
                            <li>
                              <h4><%= link_to product.name, product_path(product.permalink) %></h4>
                              <p><%= product.short_description %></p>
                              <p><b>Price:</b> <%= number_to_currency product.price %></p>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-6">
                        <%= image_tag product.default_image.path, :width => '80px', :style => "float:right" %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
    <% end %>
</div>